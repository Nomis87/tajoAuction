<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="tajoAuctionUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>com.tajoAuction.entity.AppointmentEntity</class>
        <class>com.tajoAuction.entity.AuctionEntity</class>
        <class>com.tajoAuction.entity.BidEntity</class>
        <class>com.tajoAuction.entity.UserEntity</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>
    </persistence-unit>
</persistence>